@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container">

    @if(Model.Count() > 0)
    {
        <a asp-action="Create" class="btn btn-success mb-3 ps-3 pe-3 pt-2 pb-2 fs-5">Add New Transaction</a>
    }

    @if (!Model.Any())
    {
        <div class="text-center" role="alert">
            <img class="img-fluid w-25 h-25" src="~/images/empty products.svg" />

            <h4>No transaction found.</h4>
            <p class="fs-5">Create your first transaction!</p>
            <a asp-action="Create" class="btn btn-success mb-3 ps-5 pe-5 pt-3 pb-3 fs-5">Add New Transaction</a>
        </div>
    }

    else
    {
    <h2 class="text-center mb-4">Transaction List</h2>
        <table id="dataTable" class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<script>

    $(document).ready(function () {
        if (@Model.Any().ToString().ToLower()) {
            $('#dataTable').DataTable();
        }
    });

    function confirmDelete(transactionId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This action cannot be undone!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Transaction/Delete/" + transactionId;
            }
        });
    }

    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>
