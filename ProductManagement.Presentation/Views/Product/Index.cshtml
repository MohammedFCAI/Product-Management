@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h2 class="text-center mb-4">Product List</h2>

    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Add New Product</a>

    <table id="dataTable" class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Generated Code</th>
                <th>Name</th>
                <th>Unit</th>
                <th>Price</th>
                <th>Initial Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GeneratedCode</td>
                    <td>@item.Name</td>
                    <td>@item.Unit</td>
                    <td>@item.Price</td>
                    <td>@item.InitialQuantity</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(productId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This action cannot be undone!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Product/Delete/" + productId;
            }
        });
    }

    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>
