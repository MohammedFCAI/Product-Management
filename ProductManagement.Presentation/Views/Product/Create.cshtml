@model Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container">
    <h2 class="text-center mb-4">Add New Product</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Unit</label>
            <input asp-for="Unit" class="form-control" required />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" type="number" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Initial Quantity</label>
            <input asp-for="InitialQuantity" type="number" class="form-control" required />
            <span asp-validation-for="InitialQuantity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-info"> Back To List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}